<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4"
    tools:context=".gameActivity">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:background="#1D018798"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card_r"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="5dp" />

        <ImageView
            android:id="@+id/circle_c_1"
            android:layout_width="58dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@android:string/ok"
            app:srcCompat="@drawable/black_circle"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="52dp" />

        <ImageView
            android:id="@+id/circle_c_2"
            android:layout_width="58dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@android:string/ok"
            app:srcCompat="@drawable/black_circle"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="115dp" />

        <ImageView
            android:id="@+id/circle_c_3"
            android:layout_width="58dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@android:string/ok"
            app:srcCompat="@drawable/black_circle"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="179dp" />

        <ImageView
            android:id="@+id/circle_c_4"
            android:layout_width="58dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@android:string/ok"
            app:srcCompat="@drawable/black_circle"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="243dp" />

        <ImageView
            android:id="@+id/circle_c_5"
            android:layout_width="58dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@android:string/ok"
            app:srcCompat="@drawable/black_circle"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="310dp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/finishBtn"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/my_point"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/my_score"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:text="@string/zero"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/apo_score"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/my_score"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/opo_scor"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:layout_editor_absoluteX="40dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/finishBtn"
        android:layout_width="164dp"
        android:layout_height="121dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="80dp"
        android:clickable="true"
        android:contentDescription="@android:string/ok"
        app:srcCompat="@drawable/done"
        tools:layout_editor_absoluteX="479dp"
        tools:layout_editor_absoluteY="82dp" />

    <LinearLayout
        android:id="@+id/circles"
        android:layout_width="427dp"
        android:layout_height="98dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginBottom="28dp"
        android:background="#1D018798"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/circle_5"
            android:layout_width="70dp"
            android:layout_height="75dp"
            android:layout_marginRight="15dp"
            android:contentDescription="@android:string/ok"
            app:srcCompat="@drawable/red_circle" />

        <ImageView
            android:id="@+id/circle_4"
            android:layout_width="70dp"
            android:layout_height="75dp"
            android:layout_marginRight="15dp"
            android:contentDescription="@android:string/ok"
            app:layout_constraintEnd_toStartOf="@+id/circle_5"
            app:srcCompat="@drawable/yellow_cricle" />

        <ImageView
            android:id="@+id/circle_3"
            android:layout_width="70dp"
            android:layout_height="75dp"
            android:layout_marginRight="15dp"
            android:contentDescription="@android:string/ok"
            app:layout_constraintEnd_toStartOf="@+id/circle_4"
            app:srcCompat="@drawable/blue" />

        <ImageView
            android:id="@+id/circle_2"
            android:layout_width="70dp"
            android:layout_height="75dp"
            android:layout_marginRight="15dp"
            android:contentDescription="@string/zero"
            app:layout_constraintEnd_toStartOf="@+id/circle_3"
            app:srcCompat="@drawable/gray_circle" />

        <ImageView
            android:id="@+id/circle_1"
            android:layout_width="70dp"
            android:layout_height="75dp"
            android:contentDescription="@android:string/ok"
            app:layout_constraintEnd_toStartOf="@+id/circle_2"
            app:srcCompat="@drawable/green" />

    </LinearLayout>

</RelativeLayout>