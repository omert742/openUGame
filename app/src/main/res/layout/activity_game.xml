<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".activities.GameActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="visible">

        <TextView
            android:id="@+id/round"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="-105dp"
            android:gravity="center"
            android:text="Round: "
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/round_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:text="1"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="30dp"
        android:background="#1D018798"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="הקלף שלי:"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/circle_clicked_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:contentDescription="@android:string/ok"
            app:srcCompat="@drawable/black_circle"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="52dp" />

        <ImageView
            android:id="@+id/circle_clicked_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:contentDescription="@android:string/ok"
            app:srcCompat="@drawable/black_circle"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="115dp" />

        <ImageView
            android:id="@+id/circle_clicked_3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:contentDescription="@android:string/ok"
            app:srcCompat="@drawable/black_circle"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="179dp" />

        <ImageView
            android:id="@+id/circle_clicked_4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:contentDescription="@android:string/ok"
            app:srcCompat="@drawable/black_circle"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="243dp" />

        <ImageView
            android:id="@+id/circle_clicked_5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:contentDescription="@android:string/ok"
            app:srcCompat="@drawable/black_circle"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="310dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="115dp"
        android:layout_height="383dp"
        android:layout_marginLeft="15dp"
        android:background="#1D018798"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/test232"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card_r"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="5dp" />

        <ImageView
            android:id="@+id/circle_c_1"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@android:string/ok"
            app:srcCompat="@drawable/black_circle"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="52dp" />

        <ImageView
            android:id="@+id/circle_c_2"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@android:string/ok"
            app:srcCompat="@drawable/black_circle"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="115dp" />

        <ImageView
            android:id="@+id/circle_c_3"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@android:string/ok"
            app:srcCompat="@drawable/black_circle"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="179dp" />

        <ImageView
            android:id="@+id/circle_c_4"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@android:string/ok"
            app:srcCompat="@drawable/black_circle"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="243dp" />

        <ImageView
            android:id="@+id/circle_c_5"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@android:string/ok"
            app:srcCompat="@drawable/black_circle"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="310dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/stat_sys_upload" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/stat_sys_upload" />
        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="156dp"
        android:layout_height="74dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/finishBtn"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/my_score"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="@string/zero"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_point"
                    android:textColor="#FFFFFF"

                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/opo_score"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/apo_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/opo_scor"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/finishBtn"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:contentDescription="@android:string/ok"
        tools:layout_editor_absoluteX="479dp"
        tools:layout_editor_absoluteY="82dp" />

    <LinearLayout
        android:id="@+id/circles"
        android:layout_width="wrap_content"
        android:layout_height="98dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:background="#1D018798"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/circle_5"
            android:layout_width="65dp"
            android:layout_height="75dp"
            android:layout_marginRight="15dp"
            android:contentDescription="@android:string/ok"
            app:srcCompat="@drawable/red_circle" />

        <ImageView
            android:id="@+id/circle_4"
            android:layout_width="65dp"
            android:layout_height="75dp"
            android:layout_marginRight="15dp"
            android:contentDescription="@android:string/ok"
            app:layout_constraintEnd_toStartOf="@+id/circle_5"
            app:srcCompat="@drawable/yellow_cricle" />

        <ImageView
            android:id="@+id/circle_3"
            android:layout_width="65dp"
            android:layout_height="75dp"
            android:layout_marginRight="15dp"
            android:contentDescription="@android:string/ok"
            app:layout_constraintEnd_toStartOf="@+id/circle_4"
            app:srcCompat="@drawable/blue" />

        <ImageView
            android:id="@+id/circle_2"
            android:layout_width="65dp"
            android:layout_height="75dp"
            android:layout_marginRight="15dp"
            android:contentDescription="@string/zero"
            app:layout_constraintEnd_toStartOf="@+id/circle_3"
            app:srcCompat="@drawable/gray_circle" />

        <ImageView
            android:id="@+id/circle_1"
            android:layout_width="65dp"
            android:layout_height="75dp"
            android:contentDescription="@android:string/ok"
            app:layout_constraintEnd_toStartOf="@+id/circle_2"
            app:srcCompat="@drawable/green" />

    </LinearLayout>

</RelativeLayout>